<%= render 'shared/errors', object: @promotion %>

<%= form_with model: @promotion do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.label :code, 'Código' %>
<%= f.text_field :code %>
<%= f.label :discount_rate %>
<%= f.number_field :discount_rate %>
<%= f.label :coupon_quantity %>
<%= f.number_field :coupon_quantity %>
<%= f.label :expiration_date, 'Data de término' %>
<%= f.date_field :expiration_date %>
<%= f.submit 'Salvar'  %>
<hr>
<p> Selecione as categorias associadas a esta promoção </p>
<%= f.label :product_category_ids, 'Categorias' %>
<br>
<%= f.collection_check_boxes :product_category_ids, ProductCategory.all, :id, :name %>

<% end %>