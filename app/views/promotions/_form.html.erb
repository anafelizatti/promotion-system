<%= render 'shared/errors', object: @promotion %>
  
  <%= form_with model: @promotion do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>
  <%= f.label :code, 'Código' %>
  <%= f.text_field :code, class: "form-control" %>
  <%= f.label :discount_rate %>
  <%= f.number_field :discount_rate, class: "form-control" %>
  <%= f.label :coupon_quantity %>
  <%= f.number_field :coupon_quantity, class: "form-control" %>
  <%= f.label :expiration_date, 'Data de término' %>
  <%= f.date_field :expiration_date, class: "form-control" %>
  <br>
  <hr>
  <p> <strong> Selecione se categorias associadas a esta promoção </p></strong>
  <%= f.label :product_category_ids, 'Válidas:' %>
  <br>
  <%= f.collection_check_boxes :product_category_ids, ProductCategory.all, :id, :name, class: "form-control"%>
  <br>
  <hr>
  <%= f.submit 'Salvar', class:"btn btn-primary"  %>

<% end %>