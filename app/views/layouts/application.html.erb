<!DOCTYPE html>
<html>
  <head>
    <title>PromotionSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <p><%= flash[:success] %> </p>
  
  <%= yield %>
  
  <nav>
  <% if user_signed_in? %>
  <hr>
    <em><center> <%= current_user.email %> </p></center></em>
    <center><i><%= link_to 'Logout', destroy_user_session_path, method: :delete %></center></i>
    <br>
    <ul>
    <p><li><strong><%= link_to 'Promoções', promotions_path %></strong></li></p>
    <p><li><strong><%= link_to 'Categorias de produtos', product_categories_path %></strong></li></p>
    </ul>
  <% end %>
  </nav>
  </body>
</html>
