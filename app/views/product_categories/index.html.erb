<% if user_signed_in? %>
    <hr><strong><center><h2 style ="color:CadetBlue;"> Categoria de produto  </h2></strong><br>
    <%= link_to 'Registrar uma categoria', new_product_category_path, class: "btn btn-primary" %> 
        <br>
        <% if !@product_categories.empty? %>
            <div id='categories'>
                <%= form_tag(product_categories_path, method: :get) do %>
                    <%= text_field_tag 'search', nil, placeholder: 'Buscar categoria' %>
                    <%= submit_tag 'Pesquisar' %>
                <% end %> </center> <hr>
            </div><br>
            <% @product_categories.each do |product_category| %>
                <h3> <%= link_to product_category.name, product_category %> </h3>
                <h3> <%= product_category.code %> </h3>
            <% end %>
        <% else %>
            <br>
            <center><p>Nenhuma categoria cadastrada </p></center>
        <% end %>
  <%= link_to root_path do %>
    <i class="fa fa-angle-double-left"></i> Voltar
  <% end %>
<% else %>
    <%= link_to 'Login', new_user_session_path %>
<% end %>

 