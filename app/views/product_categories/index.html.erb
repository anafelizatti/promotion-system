<% if user_signed_in? %>
<hr>
<strong>
    <center>
        <h2 style ="color:CadetBlue;"> Categoria de produto  </h2>
</strong>
        <br>
        <%= link_to 'Registrar uma categoria', new_product_category_path %>
    </center>
<hr>
<% if @product_categories.empty? %>
    <p>Nenhuma categoria cadastrada </p>
<% else %>
    <% @product_categories.each do |product_category| %>
        <h3> <%= link_to product_category.name, product_category %> </h3>
        <h3> <%= product_category.code %> </h3>
    <% end %> 
<% end %>
<% end %>
